---
interface Props {
  variant?: 'home' | 'default';
}

const { variant = 'default' } = Astro.props;
---

<footer class={`footer ${variant === 'home' ? 'home' : ''}`}>
  <div class="footer-content">
    <div class="contact-section">
      <a href="mailto:vishnu@ranierlabs.com" class="contact-link">
        <i class="ph ph-envelope"></i>
        vishnu@ranierlabs.com
      </a>
      <div class="contact-link">
        <i class="ph ph-map-pin"></i>
        Seattle, WA
      </div>
      <a href="tel:4252896216" class="contact-link">
        <i class="ph ph-phone"></i>
        (425) 289-6216
      </a>
    </div>
    <div class="copyright">
      Â© 2025 RanierLabs. All rights reserved.
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    height: 140px;
    background: rgba(10, 6, 18, 0.4);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(139, 92, 246, 0.1);
    color: white;
    display: flex;
    align-items: center;
  }

  .footer.home {
    height: 80px;
    background: rgba(10, 6, 18, 0.4);
  }

  .footer-content {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .home .footer-content {
    flex-direction: row;
    justify-content: space-between;
    gap: 2rem;
  }

  .contact-section {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .home .contact-section {
    gap: 1.5rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .home .contact-link {
    font-size: 0.8rem;
  }

  .contact-link:hover {
    opacity: 1;
  }

  .contact-link i {
    font-size: 1.2rem;
    color: #8b5cf6;
  }

  .home .contact-link i {
    font-size: 1rem;
  }

  .copyright {
    font-size: 0.8rem;
    opacity: 0.6;
    text-align: center;
  }

  .home .copyright {
    font-size: 0.7rem;
  }

  @media (max-width: 768px) {
    .footer {
      height: auto;
      padding: 2rem 0;
    }

    .footer.home {
      padding: 1rem 0;
    }

    .home .footer-content {
      flex-direction: column;
      gap: 0.5rem;
    }

    .contact-section {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .home .contact-section {
      flex-direction: row;
      gap: 1rem;
    }
  }
</style>