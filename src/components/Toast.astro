---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div id={id} class="toast" role="alert">
  <div class="toast-content">
    <i class="ph ph-check-circle success-icon"></i>
    <span class="message">Message sent successfully!</span>
  </div>
</div>

<style>
  .toast {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: rgba(10, 6, 18, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(139, 92, 246, 0.2);
    padding: 1rem 1.5rem;
    border-radius: 1rem;
    color: white;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transform: translateY(200%);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
  }

  .toast.show {
    transform: translateY(0);
    opacity: 1;
  }

  .toast-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .success-icon {
    font-size: 1.5rem;
    color: #34d399;
  }

  .message {
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .toast {
      bottom: 1rem;
      right: 1rem;
      left: 1rem;
      padding: 0.75rem 1rem;
    }
  }
</style>